<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/container_common_margin"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_grid_item_movie_margin_bottom"
        app:cardCornerRadius="@dimen/card_grid_item_movie_corner_radius">

        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_title"
        style="@style/TextMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title" />

</LinearLayout>